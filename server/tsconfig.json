{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "Shared/*": [
        "./src/Shared/*"
      ],
      "Authorization/*": [
        "./src/Authorization/*",
        "./src/Authorization"
      ]
    },
  },
  "include": [
    "src", 
   ],
  "exclude": [
    "node_modules", "dist", "bin"
  ]
}